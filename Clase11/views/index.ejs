<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Productos</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 text-gray-900 p-4">
  <div class="max-w-5xl mx-auto">
    <h1 class="text-3xl font-bold mb-6 text-center">Listado de Productos</h1>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      <% productos.forEach(producto => { %>
        <div class="bg-white shadow rounded-lg p-4 flex flex-col items-center">
          <img src="<%= producto.imagenUrl %>" alt="<%= producto.nombre %>" class="w-full h-48 object-cover rounded">
          <h2 class="text-xl font-semibold mt-4"><%= producto.nombre %></h2>
          <p class="text-gray-700 mt-2">Precio: $<%= producto.precio.toFixed(2) %></p>
          <p class="text-gray-500">Stock: <%= producto.stock %></p>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>
